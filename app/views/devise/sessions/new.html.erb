<div class="flex flex-col justify-center items-center bg-gradient-to-tr 
 h-screen from-sky-300 to-sky-400">
 <div class="bg-slate-100 shadow-lg p-5 w-[400px] h-fit
 flex flex-col items-center rounded-lg gap-5">
    <h2 class="text-sky-500 drop-shadow-sm font-bold text-3xl ">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col gap-5">
        <div class="field ">
          <%= f.label :email , class:"font-semibold"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class:"min-w-[375px] rounded-md p-2  border border-slate-300 bg-slate-100" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"font-semibold" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "current-password",
          class:"min-w-[375px] rounded-md p-2  border border-slate-300 bg-slate-100" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field ">
            <%= f.check_box :remember_me, class:"rounded-sm ml-2" %>
            <%= f.label :remember_me, class:"font-semibold " %>
          </div>
        <% end %>
        <div class="actions flex justify-center">
          <%= f.submit "Log in",
          class:"bg-slate-900 text-slate-100 px-5 py-2 rounded-md font-semibold w-full mt-5" %>
        </div>
      </div>
    <% end %>
    <div class="text-center ">
      <%= render "devise/shared/links" %>
    </div>

    </div>
</div>
